{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "outDir": "./dist"
  },
  "tsx": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "api/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}